---
interface Props {
  title: string;
  buttonText: string;
  buttonLink?: string;
  buttonAction?: string;
}

const { 
  title, 
  buttonText, 
  buttonLink = "#", 
  buttonAction = "" 
} = Astro.props;
---

<div class="bg-gradient-to-r from-primary to-primary-dark text-white p-8 rounded-xl my-12">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
    <div>
      <h4 class="text-xl font-bold mb-2">{title}</h4>
      <p class="text-white/90">
        <slot />
      </p>
    </div>
    {buttonAction ? (
      <button 
        type="button" 
        onclick={buttonAction}
        class="whitespace-nowrap bg-white text-primary font-semibold px-6 py-3 rounded-lg hover:bg-gray-100 transition-colors"
      >
        {buttonText}
      </button>
    ) : (
      <a 
        href={buttonLink}
        class="whitespace-nowrap bg-white text-primary font-semibold px-6 py-3 rounded-lg hover:bg-gray-100 transition-colors"
      >
        {buttonText}
      </a>
    )}
  </div>
</div>