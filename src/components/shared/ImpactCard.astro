---
interface Props {
  metric: string;
  description: string;
  variant?: 'primary' | 'secondary' | 'accent';
}

const { 
  metric, 
  description, 
  variant = 'primary'
} = Astro.props;

const variants = {
  primary: 'bg-primary border-primary-light',
  secondary: 'bg-secondary border-secondary-light',
  accent: 'bg-primary-dark border-primary'
};
---

<div class={`${variants[variant]} p-8 rounded-xl border-[0.5px] shadow-lg text-center group hover:shadow-xl transition-shadow duration-300`}>
  <div class="text-5xl font-bold text-white mb-4 tracking-tight">{metric}</div>
  <p class="text-white/90 text-lg font-medium">{description}</p>
</div>