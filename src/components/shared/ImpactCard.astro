---
import Icon from './Icon.astro';

interface Props {
  metric: string;
  description: string;
  variant?: 'primary' | 'secondary' | 'accent';
  icon?: string;
}

const { 
  metric, 
  description, 
  variant = 'primary',
  icon
} = Astro.props;

const variants = {
  primary: 'bg-gradient-to-br from-primary to-primary-dark border-primary-light',
  secondary: 'bg-gradient-to-br from-secondary to-secondary-light border-secondary-light',
  accent: 'bg-gradient-to-br from-primary-dark to-primary border-primary'
};
---

<div class={`${variants[variant]} p-8 rounded-xl border-[0.5px] shadow-lg text-center group hover:shadow-xl transition-all duration-300 relative overflow-hidden`}>
  <!-- Decorative elements -->
  <div class="absolute top-0 right-0 w-32 h-32 bg-white/5 rounded-full -translate-x-8 -translate-y-8"></div>
  <div class="absolute bottom-0 left-0 w-24 h-24 bg-black/5 rounded-full translate-x-6 translate-y-6"></div>
  
  <!-- Content -->
  <div class="relative z-10">
    {icon && (
      <div class="mx-auto mb-4 bg-white/10 w-12 h-12 rounded-full flex items-center justify-center">
        <Icon name={icon} class="w-6 h-6 text-white" />
      </div>
    )}
    <div class="text-5xl font-bold text-white mb-4 tracking-tight">{metric}</div>
    <p class="text-white/90 text-lg font-medium">{description}</p>
  </div>
</div>