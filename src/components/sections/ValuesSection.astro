---
import Icon from '../shared/Icon.astro';

const values = [
  {
    icon: 'shield',
    title: 'Confidentialité maximale',
    description: 'Zéro donnée exposée aux GAFAM',
    color: 'blue'
  },
  {
    icon: 'shield-check',
    title: 'Souveraineté numérique',
    description: 'Stack technique française certifiée',
    color: 'red'
  },
  {
    icon: 'trending-up',
    title: 'ROI mesurable',
    description: 'Gains concrets sous 3 mois',
    color: 'green'
  },
  {
    icon: 'settings',
    title: 'Simplicité d\'usage',
    description: 'Interface type ChatGPT sans complexité',
    color: 'purple'
  }
];

const colorVariants = {
  blue: 'bg-blue-50 text-blue-600',
  red: 'bg-red-50 text-red-600',
  green: 'bg-green-50 text-green-600',
  purple: 'bg-purple-50 text-purple-600'
};
---

<section class="py-24 bg-gradient-to-b from-white to-neutral-50">
  <div class="container mx-auto px-4">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl font-bold mb-6">
        Nos Valeurs Fondamentales
      </h2>
      <p class="text-xl text-gray-600">
        Une approche éthique et souveraine de l'intelligence artificielle
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {values.map(value => (
        <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 group">
          <div class={`w-16 h-16 rounded-xl flex items-center justify-center mb-6 transition-transform group-hover:scale-110 ${colorVariants[value.color]}`}>
            <Icon name={value.icon} />
          </div>
          <div class="space-y-4">
            <h3 class="text-xl font-semibold flex items-center gap-2">
              <span>{value.title}</span>
            </h3>
            <p class="text-gray-600 leading-relaxed">
              {value.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>