            <input 
              type="email" 
              id="home-email-input"
              placeholder="Votre email professionnel" 
              class="flex-1 px-6 py-4 rounded-xl text-gray-900 bg-white/95 focus:ring-2 focus:ring-secondary focus:bg-white transition-all duration-200"
            >
            <button 
              type="button"
              id="audit-button"
              class="bg-secondary hover:bg-secondary-light text-primary font-semibold px-8 py-4 rounded-xl transition-all duration-200 hover:shadow-lg hover:scale-105"
